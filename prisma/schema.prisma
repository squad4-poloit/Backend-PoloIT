generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Gestor
  Egresado
  Mentor
  User
}

model User {
  // id        String      @id @default(uuid()) // uuid Mysql
  id         Int      @id @default(autoincrement()) //id Sqllite
  email      String   @unique
  first_name String
  last_name  String
  role       Role     @default(User)
  create_at  DateTime @default(now())
  update_at  DateTime @updatedAt
}

model Mentoring {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model ONG {
  id   Int    @id @default(autoincrement())
  name String
}

model Company {
  id   Int    @id @default(autoincrement())
  name String
}

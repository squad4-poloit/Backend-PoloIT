pipeline {
    agent any

    environment {
        // Define las variables de entorno necesarias
        POSTGRES_USER = "postgres"
        POSTGRES_PASSWORD = "password"
        POSTGRES_DB = "BackPoloIT"
    }
    stages {
        stage('Test') {
            steps {
                script {
                    sh "echo 'Hola Mundo'"
                    sh "ls"
                }
            }

        }
        stage('Build') {
            steps {
                script {
                    // Ejecutar Docker Compose pasando las variables de entorno
                    sh """
                    DB_USER=${DB_USER} \
                    DB_PASSWORD=${DB_PASSWORD} \
                    DB_HOST=${DB_HOST} \
                    DB_PORT=${DB_PORT} \
                    DB_NAME=${DB_NAME} \
                    DB_DOCKER_PORT=${DB_DOCKER_PORT} \
                    NODE_DOCKER_PORT=${NODE_DOCKER_PORT} \
                    NODE_PORT=${NODE_PORT} \
                    docker compose up -d
                    """
                }
            }
        }
}

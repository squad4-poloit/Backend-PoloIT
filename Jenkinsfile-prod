pipeline {
    agent any
    stages {
        stage('Test Tooling ') {
            steps { 
                script {            
                sh '''
                    docker version
                    docker info
                    docker compose version
                    docker compose ps
                    '''
                }
            }
        }
        stage('Deploy with Docker Compose (CD)') {
            steps {
                script {
                    // Ejecutar Docker Compose pasando las variables de entorno
                    sh """
                    DB_USER=${DB_USER} \
                    DB_PASSWORD=${DB_PASSWORD} \
                    DB_HOST=${DB_HOST} \
                    DB_PORT=${DB_PORT} \
                    DB_NAME=${DB_NAME} \
                    DB_DOCKER_PORT=${DB_DOCKER_PORT} \
                    NODE_DOCKER_PORT=${NODE_DOCKER_PORT} \
                    NODE_PORT=${NODE_PORT} \
                    docker compose up -d
                    """
                }
            }
        }
    }
    post {

        always {
            echo 'Pipeline finished'
        }

        success {
            echo 'Pipeline completed successfully'
        }

        failure {
            echo 'Pipeline failed'
            sh "docker compose down --remove-orphans -v"
            sh "docker compose ps"
        }
    }

}

